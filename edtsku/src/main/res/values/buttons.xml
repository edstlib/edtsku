<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- REGULAR BUTTON -->

    <style name="NegativeButton">
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size14</item>
        <item name="android:background">@drawable/bg_button_negative</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PositiveButton">
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size14</item>
        <item name="android:background">@drawable/bg_button_positive</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PositiveNegativeButton">
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size14</item>
        <item name="android:background">@drawable/bg_button_positive_negative</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DisabledButton">
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size14</item>
        <item name="android:background">@drawable/bg_button_disabled</item>
        <item name="android:textColor">@color/colorBlack70</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- SMALL BUTTON -->
    <style name="NegativeSmallButton">
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size12</item>
        <item name="android:background">@drawable/bg_button_negative</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PositiveSmallButton">
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:textAppearance">@style/RubikMedium.Size12</item>
        <item name="android:background">@drawable/bg_button_positive</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>